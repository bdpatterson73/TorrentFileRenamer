<Application x:Class="TorrentFileRenamer.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TorrentFileRenamer.WPF.Converters"
             xmlns:local="clr-namespace:TorrentFileRenamer.WPF">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                <ResourceDictionary Source="Resources/CardStyles.xaml"/>
                <ResourceDictionary Source="Resources/Animations.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
            <converters:StatusToIconConverter x:Key="StatusToIconConverter"/>
            <converters:FileSizeConverter x:Key="FileSizeConverter"/>
            <converters:DateTimeToRelativeConverter x:Key="DateTimeToRelativeConverter"/>
            <converters:StatusToRetryVisibilityConverter x:Key="StatusToRetryVisibilityConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
            <converters:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
