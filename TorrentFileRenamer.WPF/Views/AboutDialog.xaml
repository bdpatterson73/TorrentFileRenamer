<Window x:Class="TorrentFileRenamer.WPF.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About TorrentFileRenamer"
        Height="500" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Application Icon and Title -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,20">
            <TextBlock Text="??" FontSize="64" HorizontalAlignment="Center" />
            <TextBlock Text="TorrentFileRenamer"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0" />
            <TextBlock Text="WPF Version 2.0"
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0" />
        </StackPanel>

        <!-- Version Information -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Version Information" FontWeight="SemiBold" Margin="0,0,0,10" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" FontWeight="SemiBold" Margin="0,0,10,5" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="2.0.0" Margin="0,0,0,5" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Framework:" FontWeight="SemiBold" Margin="0,0,10,5" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text=".NET 8" Margin="0,0,0,5" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="UI Framework:" FontWeight="SemiBold"
                               Margin="0,0,10,5" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="WPF (Windows Presentation Foundation)"
                               Margin="0,0,0,5" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Architecture:" FontWeight="SemiBold"
                               Margin="0,0,10,5" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="MVVM Pattern" Margin="0,0,0,5" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Features and Description -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Features" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10" />

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                    <Run Text="&#x2022; TV Episode Organization" FontWeight="SemiBold" />
                    <LineBreak />
                    Automatically organize TV episodes with proper S01E01 naming format for Plex compatibility.
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                    <Run Text="&#x2022; Movie Organization" FontWeight="SemiBold" />
                    <LineBreak />
                    Organize movies alphabetically with intelligent quality tag removal.
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                    <Run Text="&#x2022; Smart File Type Detection" FontWeight="SemiBold" />
                    <LineBreak />
                    Automatically distinguish between TV shows and movies using confidence scoring.
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                    <Run Text="&#x2022; Automatic Folder Monitoring" FontWeight="SemiBold" />
                    <LineBreak />
                    Watch folders for new files and process them automatically in the background.
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                    <Run Text="&#x2022; Plex Compatibility Validation" FontWeight="SemiBold" />
                    <LineBreak />
                    Validate and auto-fix file names to ensure compatibility with Plex Media Server.
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                    <Run Text="&#x2022; Multi-Episode Support" FontWeight="SemiBold" />
                    <LineBreak />
                    Handle multi-episode files with formats like S01E01-02 or S01E01E02.
                </TextBlock>

                <TextBlock Text="&#x00A9; 2024 TorrentFileRenamer Project"
                           FontSize="11"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0" />
                <TextBlock Text="Built with .NET 8 and WPF using MVVM architecture"
                           FontSize="11"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0" />
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="3"
                Content="Close"
                Click="CloseButton_Click"
                Style="{StaticResource PrimaryButton}"
                IsCancel="True"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0,15,0,0" />
    </Grid>
</Window>