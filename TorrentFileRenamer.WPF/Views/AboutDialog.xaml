<Window x:Class="TorrentFileRenamer.WPF.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About TorrentFileRenamer"
        Height="600" Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Modern styles -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#2C3E50"/>
      <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

   <Style x:Key="FeatureTitleStyle" TargetType="TextBlock">
<Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#34495E"/>
  </Style>

        <Style x:Key="FeatureTextStyle" TargetType="TextBlock">
    <Setter Property="TextWrapping" Value="Wrap"/>
 <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#5A6C7D"/>
            <Setter Property="LineHeight" Value="18"/>
    </Style>

        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
          <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
      <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#5A6C7D"/>
   <Setter Property="FontSize" Value="12"/>
        </Style>
  </Window.Resources>

    <Border BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid>
 <Grid.RowDefinitions>
           <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

  <!-- Header Section with Gradient Background -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
       <Grid Margin="30,25,30,25">
              <Grid.ColumnDefinitions>
         <ColumnDefinition Width="Auto"/>
       <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

 <!-- Icon -->
          <Border Grid.Column="0" 
           Width="80" Height="80" 
      Background="#3498DB"
    CornerRadius="40"
     VerticalAlignment="Center"
Margin="0,0,20,0">
       <Border.Effect>
          <DropShadowEffect Color="#3498DB" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
       </Border.Effect>
  <Viewbox Width="45" Height="45">
      <Canvas Width="24" Height="24">
         <!-- File/Folder icon representation -->
             <Path Fill="White" Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H10L12,6H19A2,2 0 0,1 21,8H21L4,8V18L6.14,10H23.21L20.93,18.5C20.7,19.37 19.92,20 19,20Z"/>
    <Path Fill="White" Opacity="0.7" Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
   </Canvas>
  </Viewbox>
  </Border>

<!-- Title and Version -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
       <TextBlock Text="TorrentFileRenamer"
          FontSize="28"
               FontWeight="Bold"
              Foreground="#2C3E50" />
      <TextBlock Text="WPF Version 2.0"
   FontSize="14"
             Foreground="#7F8C8D"
        Margin="0,4,0,0" />
         <TextBlock Text="Professional Media File Organization"
   FontSize="12"
       FontStyle="Italic"
                   Foreground="#95A5A6"
      Margin="0,8,0,0" />
      </StackPanel>
        </Grid>
            </Border>

   <!-- Content Area -->
 <ScrollViewer Grid.Row="1" 
VerticalScrollBarVisibility="Auto"
      Padding="30,25,30,15">
      <StackPanel>
          <!-- Version Information Card -->
       <Border Background="White"
   BorderBrush="#E8EAED"
              BorderThickness="1"
            CornerRadius="8"
          Padding="20"
  Margin="0,0,0,20">
<Border.Effect>
           <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
           <StackPanel>
            <TextBlock Text="?? System Information" Style="{StaticResource HeaderTextStyle}"/>
         <Grid>
          <Grid.ColumnDefinitions>
           <ColumnDefinition Width="140" />
    <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
   <Grid.RowDefinitions>
       <RowDefinition Height="Auto" />
               <RowDefinition Height="Auto" />
     <RowDefinition Height="Auto" />
     <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
         </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" Style="{StaticResource InfoLabelStyle}" Margin="0,0,0,8" />
 <TextBlock Grid.Row="0" Grid.Column="1" Text="2.0.0" Style="{StaticResource InfoValueStyle}" Margin="0,0,0,8" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Framework:" Style="{StaticResource InfoLabelStyle}" Margin="0,0,0,8" />
              <TextBlock Grid.Row="1" Grid.Column="1" Text=".NET 8.0" Style="{StaticResource InfoValueStyle}" Margin="0,0,0,8" />

    <TextBlock Grid.Row="2" Grid.Column="0" Text="UI Technology:" Style="{StaticResource InfoLabelStyle}" Margin="0,0,0,8" />
             <TextBlock Grid.Row="2" Grid.Column="1" Text="Windows Presentation Foundation (WPF)" Style="{StaticResource InfoValueStyle}" Margin="0,0,0,8" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Architecture:" Style="{StaticResource InfoLabelStyle}" Margin="0,0,0,8" />
      <TextBlock Grid.Row="3" Grid.Column="1" Text="MVVM (Model-View-ViewModel)" Style="{StaticResource InfoValueStyle}" Margin="0,0,0,8" />

         <TextBlock Grid.Row="4" Grid.Column="0" Text="Platform:" Style="{StaticResource InfoLabelStyle}" />
     <TextBlock Grid.Row="4" Grid.Column="1" Text="Windows 10/11 (x64)" Style="{StaticResource InfoValueStyle}" />
          </Grid>
     </StackPanel>
            </Border>

          <!-- Features Card -->
        <Border Background="White"
            BorderBrush="#E8EAED"
        BorderThickness="1"
  CornerRadius="8"
      Padding="20"
      Margin="0,0,0,20">
   <Border.Effect>
           <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
        </Border.Effect>
   <StackPanel>
    <TextBlock Text="? Key Features" Style="{StaticResource HeaderTextStyle}"/>

     <StackPanel Margin="0,0,0,12">
     <TextBlock Style="{StaticResource FeatureTitleStyle}">
         <Run Text="??"/>
         <Run Text="TV Episode Organization"/>
          </TextBlock>
         <TextBlock Style="{StaticResource FeatureTextStyle}" Margin="20,4,0,0">
        Automatically organize TV episodes with proper S01E01 naming conventions. Supports multi-episode files and ensures Plex Media Server compatibility.
     </TextBlock>
         </StackPanel>

           <StackPanel Margin="0,0,0,12">
       <TextBlock Style="{StaticResource FeatureTitleStyle}">
            <Run Text="??"/>
           <Run Text="Movie Organization"/>
            </TextBlock>
      <TextBlock Style="{StaticResource FeatureTextStyle}" Margin="20,4,0,0">
        Organize movies alphabetically with year detection and intelligent quality tag removal. Handles various naming formats and creates clean folder structures.
          </TextBlock>
   </StackPanel>

                   <StackPanel Margin="0,0,0,12">
    <TextBlock Style="{StaticResource FeatureTitleStyle}">
      <Run Text="??"/>
  <Run Text="Smart Detection"/>
              </TextBlock>
       <TextBlock Style="{StaticResource FeatureTextStyle}" Margin="20,4,0,0">
         Automatically distinguish between TV shows and movies using confidence scoring algorithms. Includes advanced search and filtering capabilities.
     </TextBlock>
  </StackPanel>

  <StackPanel Margin="0,0,0,12">
             <TextBlock Style="{StaticResource FeatureTitleStyle}">
 <Run Text="???"/>
       <Run Text="Folder Monitoring"/>
    </TextBlock>
   <TextBlock Style="{StaticResource FeatureTextStyle}" Margin="20,4,0,0">
 Watch folders for new files and process them automatically in the background. Configurable stability delays and file type filters.
            </TextBlock>
       </StackPanel>

       <StackPanel Margin="0,0,0,12">
  <TextBlock Style="{StaticResource FeatureTitleStyle}">
  <Run Text="?"/>
      <Run Text="Plex Validation"/>
    </TextBlock>
          <TextBlock Style="{StaticResource FeatureTextStyle}" Margin="20,4,0,0">
       Validate and auto-fix file names to ensure full compatibility with Plex Media Server naming requirements and best practices.
     </TextBlock>
        </StackPanel>

    <StackPanel>
  <TextBlock Style="{StaticResource FeatureTitleStyle}">
   <Run Text="??"/>
          <Run Text="Export &amp; Statistics"/>
         </TextBlock>
    <TextBlock Style="{StaticResource FeatureTextStyle}" Margin="20,4,0,0">
        Export file lists to CSV, JSON, or Excel formats. Real-time statistics tracking with comprehensive processing reports.
    </TextBlock>
    </StackPanel>
      </StackPanel>
        </Border>

    <!-- Additional Info -->
      <Border Background="White"
           BorderBrush="#E8EAED"
    BorderThickness="1"
  CornerRadius="8"
             Padding="20">
     <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
     </Border.Effect>
       <StackPanel>
     <TextBlock Text="?? Additional Information" Style="{StaticResource HeaderTextStyle}"/>
        
        <TextBlock TextWrapping="Wrap" 
             FontSize="12" 
         Foreground="#5A6C7D"
 LineHeight="18"
    Margin="0,0,0,12">
       <Run Text="This application helps organize media files downloaded from torrents or other sources. "/>
      <Run Text="It intelligently parses file names, detects media types, and reorganizes them into "/>
<Run Text="clean, standardized folder structures compatible with modern media servers like Plex."/>
   </TextBlock>

     <TextBlock TextWrapping="Wrap" 
      FontSize="12" 
 Foreground="#5A6C7D"
        LineHeight="18">
          <Run Text="Built with modern .NET 8 technologies and following MVVM architectural patterns "/>
          <Run Text="for maintainability and extensibility. Features include async operations, "/>
           <Run Text="comprehensive error handling, and persistent user preferences."/>
     </TextBlock>
    </StackPanel>
           </Border>
    </StackPanel>
       </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
    Background="White" 
            BorderBrush="#E0E0E0" 
                    BorderThickness="0,1,0,0"
Padding="30,20">
     <Grid>
               <Grid.ColumnDefinitions>
  <ColumnDefinition Width="*"/>
           <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

         <!-- Copyright -->
   <StackPanel Grid.Column="0" VerticalAlignment="Center">
  <TextBlock Text="&#169; 2024 TorrentFileRenamer Project"
          FontSize="11"
     Foreground="#95A5A6" />
            <TextBlock Text="Open source project built with passion for media organization"
    FontSize="10"
     Foreground="#BDC3C7"
    Margin="0,2,0,0" />
 </StackPanel>

     <!-- Close Button -->
       <Button Grid.Column="1"
                Content="Close"
     Click="CloseButton_Click"
 Style="{StaticResource PrimaryButton}"
      IsCancel="True"
    Width="100"
 Height="36"/>
            </Grid>
        </Border>
        </Grid>
    </Border>
</Window>