<Window x:Class="TorrentFileRenamer.WPF.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Processing"
        Height="350"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        SizeToContent="Height">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="TitleTextBlock"
                   Grid.Row="0"
                   Text="Processing files..."
                   Style="{StaticResource HeadingTextBlock}"
                   Margin="0,0,0,10" />

        <!-- Current File -->
        <TextBlock Grid.Row="1"
                   Text="Current file:"
                   Margin="0,5,0,2" />
        <TextBlock x:Name="CurrentFileTextBlock"
                   Grid.Row="2"
                   Text=""
                   FontWeight="SemiBold"
                   TextTrimming="CharacterEllipsis"
                   Margin="0,0,0,10" />

        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar"
                     Grid.Row="3"
                     Height="25"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Margin="0,0,0,10" />

        <!-- Progress Text -->
        <TextBlock x:Name="ProgressTextBlock"
                   Grid.Row="4"
                   Text="0%"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,5,0,0" />

        <!-- Transfer Details (Speed and Bytes) -->
        <TextBlock x:Name="TransferDetailsTextBlock"
                   Grid.Row="5"
                   Text=""
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Foreground="#666666"
                   FontSize="11"
                   Margin="0,2,0,5" />

        <!-- ETA Display -->
        <TextBlock x:Name="EtaTextBlock"
                   Grid.Row="6"
                   Text=""
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Foreground="#0078D4"
                   FontSize="11"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10" />

        <!-- Cancel Button -->
        <Button x:Name="CancelButton"
                Grid.Row="8"
                Content="Cancel"
                Click="CancelButton_Click"
                Style="{StaticResource SecondaryButton}"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0,10,0,0" />
    </Grid>
</Window>